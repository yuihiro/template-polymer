{
    "version": "0.2.0",
    "configurations": [{
        "type": "chrome",
        "request": "launch",
        "name": "Launch Chrome against localhost",
        "url": "http://localhost:5000",
        "sourceMaps": false,
        "diagnosticLogging": true,
        "webRoot": "${workspaceRoot}/app",
        "userDataDir": "${workspaceRoot}/.vscode/chrome"
    }, {
        "name": "Attach with sourcemaps",
        "type": "chrome",
        "request": "attach",
        "port": 9222,
        "sourceMaps": false,
        "webRoot": "${workspaceRoot}/app",
        "diagnosticLogging": true,
        "userDataDir": "${workspaceRoot}/.vscode/chrome"
    }]
}